<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/member_bottom_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <View
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/member_message_input"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/icon_message" />

    <View
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/member_send_good"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/icon_like" />

    <View
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/member_send_gift"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:background="@drawable/gift_btn" />

    <View
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/member_menu_more"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/menumore" />

    <View
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/member_fullscreen_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/icon_fullscreen" />

    <View
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1" />

</LinearLayout>
