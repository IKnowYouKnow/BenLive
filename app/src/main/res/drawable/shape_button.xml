<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 按压 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#fdabbb"
                android:endColor="#fd506d"
                android:angle="270"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <!-- 获取焦点 -->
    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="#fd8ba0"
                android:endColor="#fc5471"
                android:angle="270"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <!--默认 -->
    <item>
        <shape>
            <gradient android:startColor="#fdaaba"
                android:endColor="#fd506e"
                android:angle="0"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>

</selector>